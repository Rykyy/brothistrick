    for i,v in pairs(plr.Character:GetChildren()) do
        if string.find(v.Name, "Axe") then
            local args = {
                [1] = "Action1",
                [2] = "BasicAttack"
            }
                
            reps.Knit.Services.ActionBarService.RE.SelectSkill:FireServer(unpack(args))
